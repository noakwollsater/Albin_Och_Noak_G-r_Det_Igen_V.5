@page
@model Webb_Shop_Weapons.Pages.CheckoutModel
@inject Webb_Shop_Weapons.Data.AccessControl accessControl


@{
    ViewData["Title"] = "Checkout Summary";
}
<head>
    <link rel="stylesheet" href="~/css/cart.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>

<div class="WeaponCard">
<h1>Checkout Summary:</h1>
<h3>Thanks For your order!</h3>
@if (Model.ShoppingCart != null && Model.ShoppingCart.Items.Any())
{
        <h2>Total Price: $@Model.TotalPrice.ToString("N2")</h2>
}
else
{
    <p>Your shopping cart is empty.</p>
}
<form class="back-home" method="get" asp-page="/index">
    <button type="submit" class="dltbtn">Back to store!</button>
</form>

</div>
